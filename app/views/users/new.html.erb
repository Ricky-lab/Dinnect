<!-- views/users/new.html.erb (User Registration Form) -->
<h1>Sign Up</h1>

<%= form_for @user, url: signup_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit 'Sign Up' %>
<% end %>
